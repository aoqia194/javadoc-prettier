{
    "name": "javadoc-prettier",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "dev": "concurrently --names CORE,LOADER,LOADER,THEMES --prefix-colors '#f266d8,#7da6e8,#7da6e8,#e8d766' 'bun run --filter 'core' build:ts --watch' 'bun run --filter 'loader' build:ts --watch' 'bun run --filter 'loader' build:css --watch' 'bun run --filter 'themes' build:css --watch'",
        "prod": "bun run build-prod",
        "build": "bun run --filter '*' build",
        "build-prod": "bun run --filter '*' build-prod"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    },
    "homepage": "https://github.com/aoqia194/javadoc-prettier",
    "author": {
        "name": "aoqia",
        "email": "aoqia@aoqia.dev",
        "url": "https://github.com/aoqia194"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/aoqia194/javadoc-prettier"
    }
}
