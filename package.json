{
    "name": "javadoc-prettier",
    "module": "src/index.tsx",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "bun src/index.tsx",
        "clean": "rm -rf dist/",
        "build": "bun run build:prod",
        "build:dev": "bun build src/index.tsx --outfile dist/javadoc-prettier.js --target bun",
        "build:prod": "bun build --bytecode --minify --sourcemap src/index.tsx --outfile dist/javadoc-prettier.min.js --target bun",
        "deploy": "bun run build",
        "deploy:dev": "bun run build:dev && bun run deploy:dev:pzjd",
        "deploy:dev:pzjd": "cp dist/javadoc-prettier.js ../ProjectZomboidJavaDocs/script-files/"
    },
    "devDependencies": {
        "@types/bun": "^1.3.4"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
